---
/**
 * Typography Component
 *
 * A flexible typography component with predefined variants.
 * Similar to MUI's Typography component.
 *
 * @props
 * - variant: Typography style variant
 *   - 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6' - Heading variants
 *   - 'subtitle1' | 'subtitle2' - Subtitle variants
 *   - 'body1' | 'body2' - Body text variants
 *   - 'caption' - Small text
 *   - 'overline' - Uppercase label text
 *
 * - component: HTML element to render (default: matches variant)
 *   - 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | 'p' | 'span' | 'div'
 *
 * - color: Text color variant (matches theme constants)
 *   - Primary: 'primary-main' | 'primary-light' | 'primary-dark' | 'primary-contrast'
 *   - Secondary: 'secondary-main' | 'secondary-light' | 'secondary-dark' | 'secondary-contrast'
 *   - Text: 'text-main' | 'text-light' | 'text-dark' | 'text-contrast'
 *   - Background: 'background-main' | 'background-light' | 'background-dark' | 'background-contrast'
 *   - Other: 'inherit'
 *
 * - align: Text alignment
 *   - 'left' | 'center' | 'right' | 'justify'
 *
 * - className: string (optional) - Additiolight">Body text</Typography>
 * <Typography variant="h2" component="h1" color="primary-main
 * Usage:
 * <Typography variant="h1">Main Title</Typography>
 * <Typography variant="body1" color="text-secondary">Body text</Typography>
 * <Typography variant="h2" component="h1">SEO optimized</Typography>
 */

export interface Props {
  variant?:
    | 'h1'
    | 'h2'
    | 'h3'
    | 'h4'
    | 'h5'
    | 'h6'
    | 'subtitle1'
    | 'subtitle2'
    | 'body1'
    | 'body2'
    | 'caption'
    | 'overline';
  component?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | 'p' | 'span' | 'div';
  color?:
    | 'primary-main'
    | 'primary-light'
    | 'primary-dark'
    | 'primary-contrast'
    | 'secondary-main'
    | 'secondary-light'
    | 'secondary-dark'
    | 'secondary-contrast'
    | 'text-main'
    | 'text-light'
    | 'text-dark'
    | 'text-contrast'
    | 'background-main'
    | 'background-light'
    | 'background-dark'
    | 'background-contrast'
    | 'inherit';
  align?: 'left' | 'center' | 'right' | 'justify';
  className?: string;
}

const { component, variant = 'body1', color = 'inherit', align = 'left', className = '', ...rest } = Astro.props;

// Default component based on variant
const defaultComponents: Record<string, string> = {
  h1: 'h1',
  h2: 'h2',
  h3: 'h3',
  h4: 'h4',
  h5: 'h5',
  h6: 'h6',
  subtitle1: 'h6',
  subtitle2: 'h6',
  body1: 'p',
  body2: 'p',
  caption: 'span',
  overline: 'span',
};

const elementType = component || defaultComponents[variant] || 'p';
const classes = `typography variant-${variant} color-${color} align-${align} ${className}`;
---

{
  elementType === 'h1' && (
    <h1 class={classes} {...rest}>
      <slot />
    </h1>
  )
}
{
  elementType === 'h2' && (
    <h2 class={classes} {...rest}>
      <slot />
    </h2>
  )
}
{
  elementType === 'h3' && (
    <h3 class={classes} {...rest}>
      <slot />
    </h3>
  )
}
{
  elementType === 'h4' && (
    <h4 class={classes} {...rest}>
      <slot />
    </h4>
  )
}
{
  elementType === 'h5' && (
    <h5 class={classes} {...rest}>
      <slot />
    </h5>
  )
}
{
  elementType === 'h6' && (
    <h6 class={classes} {...rest}>
      <slot />
    </h6>
  )
}
{
  elementType === 'p' && (
    <p class={classes} {...rest}>
      <slot />
    </p>
  )
}
{
  elementType === 'span' && (
    <span class={classes} {...rest}>
      <slot />
    </span>
  )
}
{
  elementType === 'div' && (
    <div class={classes} {...rest}>
      <slot />
    </div>
  )
}

