---
/**
 * ExampleWork2 - Work Experience Body Component (Alternate Style)
 *
 * Displays work experience with focus on project-based work.
 * Used for freelance, contract, or project-focused positions.
 */

export interface Props {
  company?: string;
  role?: string;
  projectName?: string;
  description?: string;
  deliverables?: string[];
  impact?: string;
  teamSize?: number;
}

const {
  company = 'Client Name',
  role = 'Role Title',
  projectName = 'Project Name',
  description = 'A comprehensive project delivering business value through innovative technical solutions.',
  deliverables = [
    'Full-stack web application with modern UI/UX',
    'RESTful API design and implementation',
    'Database architecture and optimization',
    'CI/CD pipeline setup and deployment',
  ],
  impact = 'Successfully launched to production, serving 10,000+ users',
  teamSize = 4,
} = Astro.props;
---

<div class="event-work-alt">
  <div class="event-work-alt-header">
    <span class="event-work-alt-company">{company}</span>
    {teamSize && (
      <span class="event-work-alt-team">ðŸ‘¥ Team of {teamSize}</span>
    )}
  </div>

  {projectName && (
    <div class="event-work-alt-project">
      <span class="event-work-alt-project-label">Project:</span>
      <span class="event-work-alt-project-name">{projectName}</span>
    </div>
  )}

  <p class="event-work-alt-description">{description}</p>

  <section class="event-work-alt-section">
    <h4>Deliverables</h4>
    <ul class="event-work-alt-list">
      {deliverables.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </section>

  {impact && (
    <div class="event-work-alt-impact">
      <span class="event-work-alt-impact-label">Impact:</span>
      <span class="event-work-alt-impact-text">{impact}</span>
    </div>
  )}
</div>

<style>
  .event-work-alt {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .event-work-alt-header {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
  }

  .event-work-alt-company {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-primary, #cd1c0b);
  }

  .event-work-alt-team {
    font-size: 0.875rem;
    color: var(--color-text-light, #b9b9b9);
  }

  .event-work-alt-project {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 6px;
    border-left: 3px solid var(--color-primary, #cd1c0b);
  }

  .event-work-alt-project-label {
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    color: var(--color-text-light, #b9b9b9);
  }

  .event-work-alt-project-name {
    font-weight: 600;
    color: var(--color-text, #ffffff);
  }

  .event-work-alt-description {
    margin: 0;
    line-height: 1.6;
    color: var(--color-text, #ffffff);
  }

  .event-work-alt-section h4 {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-light, #b9b9b9);
    margin: 0 0 0.5rem;
  }

  .event-work-alt-list {
    margin: 0;
    padding-left: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .event-work-alt-list li {
    color: var(--color-text, #ffffff);
    line-height: 1.5;
  }

  .event-work-alt-impact {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    padding: 0.75rem;
    background: rgba(205, 28, 11, 0.1);
    border-radius: 6px;
  }

  .event-work-alt-impact-label {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    color: var(--color-primary, #cd1c0b);
    white-space: nowrap;
  }

  .event-work-alt-impact-text {
    color: var(--color-text, #ffffff);
    line-height: 1.5;
  }
</style>
