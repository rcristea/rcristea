---
/**
 * ExampleProject2 - Project Body Component (Portfolio Style)
 *
 * Displays project with visual focus.
 * Used for portfolio pieces, design work, visual projects.
 */

export interface Props {
  name?: string;
  type?: string;
  description?: string;
  tech?: string[];
  highlights?: string[];
  imageUrl?: string;
}

const {
  name = 'Portfolio Project',
  type = 'Web Application',
  description = 'A visually stunning project that showcases modern design principles and cutting-edge web technologies.',
  tech = ['Next.js', 'Tailwind CSS', 'Framer Motion'],
  highlights = [
    'Responsive design across all devices',
    'Smooth animations and transitions',
    'Optimized for performance (100 Lighthouse score)',
    'Accessible and SEO-friendly',
  ],
  imageUrl,
} = Astro.props;
---

<div class="event-project-visual">
  {imageUrl && (
    <div class="event-project-visual-image">
      <img src={imageUrl} alt={`${name} preview`} loading="lazy" />
    </div>
  )}

  <div class="event-project-visual-content">
    <div class="event-project-visual-header">
      <span class="event-project-visual-type">{type}</span>
      <h3 class="event-project-visual-name">{name}</h3>
    </div>

    <p class="event-project-visual-description">{description}</p>

    {highlights.length > 0 && (
      <ul class="event-project-visual-highlights">
        {highlights.map((highlight) => (
          <li>{highlight}</li>
        ))}
      </ul>
    )}

    {tech.length > 0 && (
      <div class="event-project-visual-tech">
        <span class="event-project-visual-tech-label">Built with:</span>
        <div class="event-project-visual-tags">
          {tech.map((t) => (
            <span class="event-project-visual-tag">{t}</span>
          ))}
        </div>
      </div>
    )}
  </div>
</div>

<style>
  .event-project-visual {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .event-project-visual-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    border-radius: 8px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.05);
  }

  .event-project-visual-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .event-project-visual-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .event-project-visual-header {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .event-project-visual-type {
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary, #cd1c0b);
  }

  .event-project-visual-name {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-text, #ffffff);
    margin: 0;
  }

  .event-project-visual-description {
    margin: 0;
    line-height: 1.6;
    color: var(--color-text, #ffffff);
  }

  .event-project-visual-highlights {
    margin: 0;
    padding-left: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .event-project-visual-highlights li {
    color: var(--color-text-light, #b9b9b9);
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .event-project-visual-highlights li::marker {
    content: 'âœ“ ';
    color: var(--color-primary, #cd1c0b);
  }

  .event-project-visual-tech {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-top: 0.5rem;
  }

  .event-project-visual-tech-label {
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    color: var(--color-text-light, #b9b9b9);
  }

  .event-project-visual-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .event-project-visual-tag {
    padding: 0.25rem 0.625rem;
    font-size: 0.75rem;
    font-weight: 500;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    color: var(--color-text, #ffffff);
  }
</style>
