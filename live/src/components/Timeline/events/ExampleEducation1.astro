---
/**
 * ExampleEducation1 - Education Body Component
 *
 * Displays educational background in the timeline modal.
 * Used for degrees, certifications, bootcamps, courses.
 */

export interface Props {
  degree?: string;
  school?: string;
  location?: string;
  gpa?: string;
  honors?: string[];
  coursework?: string[];
  activities?: string[];
}

const {
  degree = 'Bachelor of Science',
  school = 'University Name',
  location = 'City, State',
  gpa = '3.8/4.0',
  honors = [
    "Dean's List (All Semesters)",
    'Magna Cum Laude',
  ],
  coursework = [
    'Data Structures & Algorithms',
    'Software Engineering',
    'Database Systems',
    'Computer Networks',
    'Machine Learning',
  ],
  activities = [
    'Computer Science Club - President',
    'Hackathon Team Lead',
    'Teaching Assistant - Intro to Programming',
  ],
} = Astro.props;
---

<div class="event-education">
  <div class="event-education-header">
    <div class="event-education-school">{school}</div>
    {location && <div class="event-education-location">üìç {location}</div>}
  </div>

  <div class="event-education-degree">
    <span class="event-education-degree-name">{degree}</span>
    {gpa && <span class="event-education-gpa">GPA: {gpa}</span>}
  </div>

  {honors.length > 0 && (
    <section class="event-education-section">
      <h4>Honors & Awards</h4>
      <ul class="event-education-list event-education-honors">
        {honors.map((honor) => (
          <li>{honor}</li>
        ))}
      </ul>
    </section>
  )}

  {coursework.length > 0 && (
    <section class="event-education-section">
      <h4>Relevant Coursework</h4>
      <div class="event-education-tags">
        {coursework.map((course) => (
          <span class="event-education-tag">{course}</span>
        ))}
      </div>
    </section>
  )}

  {activities.length > 0 && (
    <section class="event-education-section">
      <h4>Activities & Leadership</h4>
      <ul class="event-education-list">
        {activities.map((activity) => (
          <li>{activity}</li>
        ))}
      </ul>
    </section>
  )}
</div>

<style>
  .event-education {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .event-education-header {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem;
  }

  .event-education-school {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-primary, #cd1c0b);
  }

  .event-education-location {
    font-size: 0.875rem;
    color: var(--color-text-light, #b9b9b9);
  }

  .event-education-degree {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 6px;
  }

  .event-education-degree-name {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text, #ffffff);
  }

  .event-education-gpa {
    font-size: 0.875rem;
    padding: 0.25rem 0.5rem;
    background: rgba(205, 28, 11, 0.15);
    border-radius: 4px;
    color: var(--color-primary, #cd1c0b);
    font-weight: 500;
  }

  .event-education-section h4 {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-light, #b9b9b9);
    margin: 0 0 0.5rem;
  }

  .event-education-list {
    margin: 0;
    padding-left: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .event-education-list li {
    color: var(--color-text, #ffffff);
    line-height: 1.5;
  }

  .event-education-honors li::marker {
    content: 'üèÜ ';
  }

  .event-education-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .event-education-tag {
    padding: 0.25rem 0.625rem;
    font-size: 0.75rem;
    font-weight: 500;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    color: var(--color-text, #ffffff);
  }
</style>
