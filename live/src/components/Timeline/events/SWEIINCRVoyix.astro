---
/**
 * SWEIINCRVoyix - Software Engineer II at NCR Voyix (Platform Phase)
 */

export interface Props {
  company?: string;
  location?: string;
  responsibilities?: string[];
  technologies?: string[];
}

const {
  company = 'NCR Voyix',
  location = 'Atlanta, GA',
  responsibilities = [
    'Spearheaded the investigation and development of a groundbreaking cloud platform architecture featuring a modular federation micro frontend web platform',
    'Designed platform to power both new and legacy applications',
    'Paved the way for a unified development ecosystem to streamline operations and foster collaboration across teams at NCR',
    'Developed a microservice-based back office management application',
    'Ensured scalability and adaptability, exceeding project objectives and delivering significant value to the organization',
  ],
  technologies = ['React', 'NestJS', 'TypeScript', 'Module Federation', 'Microservices'],
} = Astro.props;
---

<div class="event-work">
  <div class="event-work-header">
    <div class="event-work-company">{company}</div>
    {location && <div class="event-work-location">üìç {location}</div>}
  </div>

  <section class="event-work-section">
    <h4>Responsibilities</h4>
    <ul class="event-work-list">
      {responsibilities.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </section>

  {technologies.length > 0 && (
    <section class="event-work-section">
      <h4>Technologies</h4>
      <div class="event-tags">
        {technologies.map((tech) => (
          <span class="event-tag">{tech}</span>
        ))}
      </div>
    </section>
  )}

  <div class="event-media-slot" data-slot="media">
    <slot name="media" />
  </div>
</div>
