---
/**
 * ExampleProject1 - Project Body Component
 *
 * Displays project details in the timeline modal.
 * Used for personal projects, open source contributions, side projects.
 */

export interface Props {
  name?: string;
  tagline?: string;
  description?: string;
  features?: string[];
  tech?: string[];
  links?: { label: string; url: string }[];
  stats?: { label: string; value: string }[];
}

const {
  name = 'Project Name',
  tagline = 'A brief tagline describing the project',
  description = 'This project solves a real-world problem by providing an innovative solution that combines modern technologies with great user experience.',
  features = [
    'Feature one with detailed implementation',
    'Feature two showcasing technical skills',
    'Feature three demonstrating problem-solving',
  ],
  tech = ['React', 'TypeScript', 'Node.js', 'PostgreSQL'],
  links = [
    { label: 'GitHub', url: '#' },
    { label: 'Live Demo', url: '#' },
  ],
  stats = [
    { label: 'Stars', value: '1.2k' },
    { label: 'Forks', value: '234' },
  ],
} = Astro.props;
---

<div class="event-project">
  <div class="event-project-header">
    <h3 class="event-project-name">{name}</h3>
    {tagline && <p class="event-project-tagline">{tagline}</p>}
  </div>

  {stats.length > 0 && (
    <div class="event-project-stats">
      {stats.map((stat) => (
        <div class="event-project-stat">
          <span class="event-project-stat-value">{stat.value}</span>
          <span class="event-project-stat-label">{stat.label}</span>
        </div>
      ))}
    </div>
  )}

  <p class="event-project-description">{description}</p>

  {features.length > 0 && (
    <section class="event-project-section">
      <h4>Key Features</h4>
      <ul class="event-project-list">
        {features.map((feature) => (
          <li>{feature}</li>
        ))}
      </ul>
    </section>
  )}

  {tech.length > 0 && (
    <section class="event-project-section">
      <h4>Tech Stack</h4>
      <div class="event-project-tags">
        {tech.map((t) => (
          <span class="event-project-tag">{t}</span>
        ))}
      </div>
    </section>
  )}

  {links.length > 0 && (
    <div class="event-project-links">
      {links.map((link) => (
        <a
          href={link.url}
          class="event-project-link"
          target="_blank"
          rel="noopener noreferrer"
        >
          {link.label} â†’
        </a>
      ))}
    </div>
  )}
</div>

<style>
  .event-project {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .event-project-header {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .event-project-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-primary, #cd1c0b);
    margin: 0;
  }

  .event-project-tagline {
    font-size: 0.875rem;
    font-style: italic;
    color: var(--color-text-light, #b9b9b9);
    margin: 0;
  }

  .event-project-stats {
    display: flex;
    gap: 1.5rem;
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 6px;
  }

  .event-project-stat {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .event-project-stat-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text, #ffffff);
  }

  .event-project-stat-label {
    font-size: 0.75rem;
    color: var(--color-text-light, #b9b9b9);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .event-project-description {
    margin: 0;
    line-height: 1.6;
    color: var(--color-text, #ffffff);
  }

  .event-project-section h4 {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-light, #b9b9b9);
    margin: 0 0 0.5rem;
  }

  .event-project-list {
    margin: 0;
    padding-left: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .event-project-list li {
    color: var(--color-text, #ffffff);
    line-height: 1.5;
  }

  .event-project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .event-project-tag {
    padding: 0.25rem 0.625rem;
    font-size: 0.75rem;
    font-weight: 500;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    color: var(--color-text, #ffffff);
  }

  .event-project-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    padding-top: 0.5rem;
  }

  .event-project-link {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-primary, #cd1c0b);
    background: rgba(205, 28, 11, 0.1);
    border-radius: 6px;
    text-decoration: none;
    transition: background 0.2s ease;
  }

  .event-project-link:hover {
    background: rgba(205, 28, 11, 0.2);
  }
</style>
