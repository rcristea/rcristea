---
/**
 * SWEWeatherCompany - Software Engineer at The Weather Company (IBM)
 */

export interface Props {
  company?: string;
  location?: string;
  responsibilities?: string[];
  achievements?: string[];
  technologies?: string[];
}

const {
  company = 'The Weather Company (IBM)',
  location = 'Atlanta, GA',
  responsibilities = [
    'Developed high-performance, data-driven user interfaces for web applications using modern frameworks',
    'Ensured robust data integrity and efficient asynchronous operations',
    'Executed the migration of critical web infrastructure from IBM Cloud to AWS',
    'Engineered and optimized cron jobs for critical tasks',
    'Led the development of POC for an upcoming TV app, unlocking new business avenues and partnerships',
  ],
  achievements = [
    'Enhanced system scalability and resilience allowing for a 50% increase in maximum requests per second',
    'Reduced radar generation tasks by 90%, significantly boosting performance and cost-efficiency',
  ],
  technologies = ['React', 'AWS', 'IBM Cloud', 'TypeScript'],
} = Astro.props;
---

<div class="event-work">
  <div class="event-work-header">
    <div class="event-work-company">{company}</div>
    {location && <div class="event-work-location">üìç {location}</div>}
  </div>

  <section class="event-work-section">
    <h4>Responsibilities</h4>
    <ul class="event-work-list">
      {responsibilities.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </section>

  {achievements.length > 0 && (
    <section class="event-work-section">
      <h4>Key Achievements</h4>
      <ul class="event-work-list event-work-achievements">
        {achievements.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    </section>
  )}

  {technologies.length > 0 && (
    <section class="event-work-section">
      <h4>Technologies</h4>
      <div class="event-tags">
        {technologies.map((tech) => (
          <span class="event-tag">{tech}</span>
        ))}
      </div>
    </section>
  )}

  <div class="event-media-slot" data-slot="media">
    <slot name="media" />
  </div>
</div>
