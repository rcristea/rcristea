---
/**
 * CTOCarCareers - CTO at CARCAREERS.COM
 */

export interface Props {
  company?: string;
  location?: string;
  responsibilities?: string[];
  technologies?: string[];
}

const {
  company = 'CARCAREERS.COM',
  location = 'Remote, USA',
  responsibilities = [
    'Received equity share in the company in recognition of contributions',
    'Transitioned from engineering to leading development strategy and direction',
    'Overseeing technical architecture and engineering team',
    'Driving platform growth and scalability initiatives',
  ],
  technologies = ['React', 'NestJS', 'TypeScript', 'GKE', 'Monorepo'],
} = Astro.props;
---

<div class="event-work">
  <div class="event-work-header">
    <div class="event-work-company">{company}</div>
    {location && <div class="event-work-location">üìç {location}</div>}
  </div>

  <section class="event-work-section">
    <h4>Leadership</h4>
    <ul class="event-work-list">
      {responsibilities.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </section>

  {technologies.length > 0 && (
    <section class="event-work-section">
      <h4>Technologies</h4>
      <div class="event-tags">
        {technologies.map((tech) => (
          <span class="event-tag">{tech}</span>
        ))}
      </div>
    </section>
  )}

  <div class="event-media-slot" data-slot="media">
    <slot name="media" />
  </div>
</div>
