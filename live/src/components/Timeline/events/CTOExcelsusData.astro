---
/**
 * CTOExcelsusData - CTO at Excelsus Data
 */

export interface Props {
  company?: string;
  location?: string;
  responsibilities?: string[];
  technologies?: string[];
}

const {
  company = 'Excelsus Data',
  location = 'Remote',
  responsibilities = [
    'Chief Technology Officer leading technical strategy and development',
    'Building pre-employment screening platform',
    'Architecting scalable solutions for employment verification',
  ],
  technologies = ['React', 'Go', 'TypeScript'],
} = Astro.props;
---

<div class="event-work">
  <div class="event-work-header">
    <div class="event-work-company">{company}</div>
    {location && <div class="event-work-location">üìç {location}</div>}
  </div>

  <section class="event-work-section">
    <h4>Leadership</h4>
    <ul class="event-work-list">
      {responsibilities.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </section>

  {technologies.length > 0 && (
    <section class="event-work-section">
      <h4>Technologies</h4>
      <div class="event-tags">
        {technologies.map((tech) => (
          <span class="event-tag">{tech}</span>
        ))}
      </div>
    </section>
  )}

  <div class="event-media-slot" data-slot="media">
    <slot name="media" />
  </div>
</div>
