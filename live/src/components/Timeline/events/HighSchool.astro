---
/**
 * HighSchool - Georgia Cyber Academy
 */

export interface Props {
  school?: string;
  location?: string;
  gpa?: string;
  highlights?: string[];
}

const {
  school = 'Georgia Cyber Academy',
  location = 'Georgia',
  gpa = '4.1/4.0',
  highlights = [
    'Graduated with honors',
    'Online/virtual learning environment',
  ],
} = Astro.props;
---

<div class="event-education">
  <div class="event-education-header">
    <div class="event-education-school">{school}</div>
    {location && <div class="event-education-location">üìç {location}</div>}
  </div>

  <div class="event-education-degree">
    <span class="event-education-gpa">GPA: {gpa}</span>
  </div>

  {highlights.length > 0 && (
    <section class="event-education-section">
      <h4>Highlights</h4>
      <ul class="event-education-list">
        {highlights.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    </section>
  )}

  <!-- Media placeholder for screenshots, demos, etc. -->
  <div class="event-media-slot" data-slot="media">
    <slot name="media" />
  </div>
</div>
