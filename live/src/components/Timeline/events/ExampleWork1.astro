---
/**
 * ExampleWork1 - Work Experience Body Component
 *
 * Displays work experience details in the timeline modal.
 * Used for positions like full-time jobs, internships, freelance work.
 */

export interface Props {
  company?: string;
  role?: string;
  location?: string;
  highlights?: string[];
  technologies?: string[];
  achievements?: string[];
}

const {
  company = 'Company Name',
  role = 'Role Title',
  location = 'Location',
  highlights = [
    'Led development of key features resulting in improved user engagement',
    'Collaborated with cross-functional teams to deliver projects on time',
    'Mentored junior developers and conducted code reviews',
  ],
  technologies = ['React', 'TypeScript', 'Node.js', 'PostgreSQL'],
  achievements = [
    'Increased application performance by 40%',
    'Reduced bug reports by 60% through improved testing',
  ],
} = Astro.props;
---

<div class="event-work">
  <div class="event-work-header">
    <div class="event-work-company">{company}</div>
    {location && <div class="event-work-location">üìç {location}</div>}
  </div>

  <section class="event-work-section">
    <h4>Responsibilities</h4>
    <ul class="event-work-list">
      {highlights.map((highlight) => (
        <li>{highlight}</li>
      ))}
    </ul>
  </section>

  {achievements.length > 0 && (
    <section class="event-work-section">
      <h4>Key Achievements</h4>
      <ul class="event-work-list event-work-achievements">
        {achievements.map((achievement) => (
          <li>{achievement}</li>
        ))}
      </ul>
    </section>
  )}

  {technologies.length > 0 && (
    <section class="event-work-section">
      <h4>Technologies</h4>
      <div class="event-work-tags">
        {technologies.map((tech) => (
          <span class="event-work-tag">{tech}</span>
        ))}
      </div>
    </section>
  )}
</div>

<style>
  .event-work {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .event-work-header {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem;
  }

  .event-work-company {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-primary, #cd1c0b);
  }

  .event-work-location {
    font-size: 0.875rem;
    color: var(--color-text-light, #b9b9b9);
  }

  .event-work-section h4 {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-light, #b9b9b9);
    margin: 0 0 0.5rem;
  }

  .event-work-list {
    margin: 0;
    padding-left: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .event-work-list li {
    color: var(--color-text, #ffffff);
    line-height: 1.5;
  }

  .event-work-achievements li::marker {
    content: '‚úì ';
    color: var(--color-primary, #cd1c0b);
  }

  .event-work-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .event-work-tag {
    padding: 0.25rem 0.625rem;
    font-size: 0.75rem;
    font-weight: 500;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    color: var(--color-text, #ffffff);
  }
</style>
