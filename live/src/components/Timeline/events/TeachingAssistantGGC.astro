---
/**
 * TeachingAssistantGGC - Teaching Assistant at Georgia Gwinnett College
 */

export interface Props {
  school?: string;
  location?: string;
  responsibilities?: string[];
  skills?: string[];
}

const {
  school = 'Georgia Gwinnett College',
  location = 'Lawrenceville, Georgia',
  responsibilities = [
    'Provided assistance to faculty and staff members with instructional material',
    'Informed students of procedures for completing in-class work and assignments, including scrum projects',
    'Attended lectures given by instructor to learn and teach as the class progressed',
  ],
  skills = ['Rapid Learning', 'Communication', 'Scrum'],
} = Astro.props;
---

<div class="event-education">
  <div class="event-education-header">
    <div class="event-education-school">{school}</div>
    {location && <div class="event-education-location">üìç {location}</div>}
  </div>

  <section class="event-education-section">
    <h4>Responsibilities</h4>
    <ul class="event-education-list">
      {responsibilities.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </section>

  {skills.length > 0 && (
    <section class="event-education-section">
      <h4>Skills</h4>
      <div class="event-tags">
        {skills.map((skill) => (
          <span class="event-tag">{skill}</span>
        ))}
      </div>
    </section>
  )}

  <div class="event-media-slot" data-slot="media">
    <slot name="media" />
  </div>
</div>
