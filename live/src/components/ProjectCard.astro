---
/**
 * ProjectCard Component
 *
 * A card displaying project information with header, description,
 * technology badges, and optional links to GitHub and live deployment.
 * Uses i18n for title and description via `projects.{id}.title` and `projects.{id}.description` keys.
 *
 * @props
 * - id: string - Project identifier (used for i18n keys)
 * - badges: string[] - Technology/skill badges
 * - githubUrl: string (optional) - GitHub repository URL
 * - liveUrl: string (optional) - Live deployment URL
 * - imageUrl: string (optional) - Project screenshot/preview image
 */

export interface Props {
  id: string;
  badges?: string[];
  githubUrl?: string;
  liveUrl?: string;
  imageUrl?: string;
  wip?: boolean;
}

const { id, badges = [], githubUrl, liveUrl, wip = false } = Astro.props;

// i18n keys derived from project id
const titleKey = `projects.${id}.title`;
const descriptionKey = `projects.${id}.description`;
---

<article class="project-card">
  <div class="project-card-content">
    <header class="project-card-header">
      <h3 class="project-card-title" data-i18n={titleKey}></h3>

      <div class="project-card-links">
        {wip && <span class="project-card-wip">WIP</span>}
        {
          githubUrl && (
            <a
              href={githubUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="project-card-link"
              aria-label="View on GitHub"
            >
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
            </a>
          )
        }

        {
          liveUrl && (
            <a
              href={liveUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="project-card-link"
              aria-label="View live"
            >
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                aria-hidden="true"
              >
                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                <polyline points="15 3 21 3 21 9" />
                <line x1="10" y1="14" x2="21" y2="3" />
              </svg>
            </a>
          )
        }
      </div>
    </header>

    <p class="project-card-description" data-i18n={descriptionKey}></p>

    {
      badges.length > 0 && (
        <div class="project-card-badges">
          {badges.map((badge) => (
            <span class="project-card-badge">{badge}</span>
          ))}
        </div>
      )
    }
  </div>
</article>

<style>
  .project-card {
    display: flex;
    flex-direction: column;
    background: rgba(30, 30, 35, 0.6);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 12px;
    overflow: hidden;
  }

  .project-card-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--background-dark);
  }

  .project-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-card-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 1.25rem;
  }

  .project-card-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
  }

  .project-card-title {
    font-family: 'Space Grotesk', 'Inter', sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-main);
    margin: 0;
    line-height: 1.3;
  }

  .project-card-links {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .project-card-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    color: var(--text-light);
    background: transparent;
    border-radius: 8px;
    transition:
      color 0.15s ease,
      background 0.15s ease;
  }

  .project-card-link:hover {
    color: var(--primary-main);
    background: rgba(255, 255, 255, 0.05);
  }

  .project-card-wip {
    padding: 0.25rem 0.5rem;
    font-family: 'Inter', sans-serif;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #fff;
    background: #dc2626;
    border-radius: 4px;
  }

  .project-card-description {
    font-family: 'Inter', sans-serif;
    font-size: 0.95rem;
    color: var(--text-light);
    line-height: 1.6;
    margin: 0;
  }

  .project-card-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .project-card-badge {
    padding: 0.25rem 0.625rem;
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--text-main);
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    transition: background 0.15s ease;
  }

  .project-card:hover .project-card-badge {
    background: rgba(255, 255, 255, 0.15);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .project-card-title {
      font-size: 1.1rem;
    }

    .project-card-description {
      font-size: 0.9rem;
    }

    .project-card-content {
      padding: 1rem;
    }
  }
</style>
